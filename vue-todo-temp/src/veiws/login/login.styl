.login
  background: #A2D78B url('../../common/image/loginbj.png') no-repeat
  background-size: 100%
  height: 100%
  overflow: hidden
  .login-title
    width: 90%
    margin: px2rem(200) auto px2rem(100)
    text-align: center
    font-size: px2rem(50)
